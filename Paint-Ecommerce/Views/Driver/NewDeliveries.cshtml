@model IEnumerable<Paint_Ecommerce.Models.Delivery>

@{
    ViewBag.Title = "NewDeliveries";
}

<h2>New Deliveries</h2>
<br />
<br />
<div align="center">
    <a href="/Driver/PlanRoute" class="btn btn-info">PLAN ROUTE</a>
</div>

<table class="table">
    <tr>
       
       
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberPlate)
        </th>
        <th>
           Driver Name
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destination)
        </th>
        <th>
           Pick Time
        </th>
     
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
      
        <td>
            @Html.DisplayFor(modelItem => item.OrderId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberPlate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DriverName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PickUpTime)
        </td>
      
       
        <td>
            <a href="/Driver/StartDelivery?id=@item.Id" class="btn btn-success">START</a>
            <a href="/Driver/PickUpOrder?id=@item.Id" class="btn btn-success">PICK UP ORDER</a>

        </td>
    </tr>
}

</table>
