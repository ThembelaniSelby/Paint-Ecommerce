            <div class="col-md-10">
                <div class="select-custom">
                    <select name="Servicetype"  class="form-control">
                        <option value="#" selected="selected">Select Service Type</option>
                        <option value="Damp-Proofing">Damp Proofing</option>
                        <option value="Roof Proofing">Roof Proofing</option>
                        <option value="Interior-Painting">Interior Painting</option>
                        <option value="Exterior-Painting">Exterior Paintitng</option>
                    </select>
                </div>
                @Html.ValidationMessageFor(model => model.Servicetype, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.InspectionDate,"Inspection Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="datetime-local" class="form-control" name="InspectionDate"required />
                @Html.ValidationMessageFor(model => model.InspectionDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ServicingDate,"Servicing Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="datetime-local" class="form-control" name="ServicingDate" required />

                @Html.ValidationMessageFor(model => model.ServicingDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="SUBMIT BOOKING" class="btn btn-info" />
            </div>
        </div>
    </div>
